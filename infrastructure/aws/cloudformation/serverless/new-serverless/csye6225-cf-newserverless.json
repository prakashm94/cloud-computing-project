{
 "AWSTemplateFormatVersion" : "2010-09-09",
 "Description":"Creating ",
 "Parameters": {
  "resource1" : {
   "Type" : "String"
  },
  "topicName": {
      "Type": "String"
     }
 },
 "Resources" : {
   "LambdaFunction": {
     "Type": "AWS::Lambda::Function",
     "Properties": {
       "Code": {
	      "S3Bucket": {"Fn::ImportValue" : "csye6225-fall2018-s3lambda"},
	      "S3Key": "lambdaapp.zip"
    	      },
        "Environment": { 
      "Variables": { 
         "domainName" : "csye6225-fall2018-shettypoo.me" 
      },
       "Handler" : "index.LogEvent",
       "Role": {"Ref": "resource1"},
       "Runtime": "java8",
       "Timeout": 20
     	}
     },

   "snsTopicLambda": {
        "Type": "AWS::SNS::Topic",
	"DependsOn": "LambdaFunction",
        "Properties": {
          "TopicName": {"Ref": "topicName"},
 	"Subscription" : [
        	{ "Endpoint" : { "Fn::GetAtt" : [ "LambdaFunction", "Arn" ] }, "Protocol" : "lambda" }
     	]
             }
        },

   "LambdaResourcePolicy":{
      "Type" : "AWS::Lambda::Permission",
      "DependsOn": "snsTopicLambda",
      "Properties" : {
      "Action" : "lambda:InvokeFunction",
      "FunctionName" : {"Ref": "LambdaFunction"},
      "Principal" : "sns.amazonaws.com",
      "SourceArn" : {"Ref": "snsTopicLambda"}
  }
} 

	
 }
}
